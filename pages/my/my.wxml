<!--logs.wxml-->
<view class="container log-list">
  <view class="section pickersection">
      <picker mode="date" value="{{days}}" start="2015-09-01" end="2100-12-31" bindchange="binddaysChange" class="pickers">
        <view class="picker">
          {{days}}
        </view>
      </picker>
      <picker mode="date" value="{{month}}" start="2015-09" fields="month" end="2100-12" bindchange="bindmonthChange" class="pickers">
        <view class="picker">
          {{month}}
        </view>
      </picker>
      
  </view>
  <view class="table">
    <view class="tr bg-w">
        <view class="th name">商品名称</view>
        <view class="th number">数量</view>
        <view class="th number">利润</view>
    </view>
    <block wx:for="{{listData}}" wx:key="{{id}}">
        <view class="tr bg-g" wx:if="{{index % 2 == 0}}" data-id="{{item.id}}" data-stockNum="{{item.stockNum}}" bindtap="openmodel">
            <view class="td name" >{{item.NAME}}</view>
            <view class="td number" >{{item.operationStock}}</view>
            <view class="td number" >{{item.profit}}</view>
        </view>
        <view class="tr" wx:else bindtap="openmodel" data-id="{{item.id}}" data-stockNum="{{item.stockNum}}">
            <view class="td name" >{{item.NAME}}</view>
            <view class="td number" >{{item.operationStock}}</view>
            <view class="td number" >{{item.profit}}</view>
        </view>
    </block>
  </view>
   <view class="weui-loadmore" wx:if="{{isLoadmore}}">
              <view class="weui-loading"></view>
              <view class="weui-loadmore__tips">正在加载</view>
    </view>
    <view class="weui-loadmore weui-loadmore_line" wx:if="{{isNodata}}">
            <view class="weui-loadmore__tips weui-loadmore__tips_in-line">暂无数据</view>
    </view>
</view>
